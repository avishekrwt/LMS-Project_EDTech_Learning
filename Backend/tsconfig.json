{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,

    "strict": true,
    "noImplicitAny": true,

    "sourceMap": true,
    "declaration": true,

    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
